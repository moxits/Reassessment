        <label for="photourl" >Photo URL</label>
    <span class="help-block">Enter the URL of a photo you want as your profile picture. This field is required.</span>
    <input id="photourl" maxlength="10000" name="photourl" placeholder="" size="30" type="text" value=<%=user.photo%>>
        
        
                                
    <label for="name" >Name</label>

        <span class="help-block">This field is required.</span>
    <input id="name" maxlength="100" name="name" placeholder="" size="30" type="text" value=<%=user.name %> required>



<label for="zipcode" >Zip Code</label>

<span class="help-block">This field is required.</span>
<input id="zipcode" maxlength="5" name="zipcode" placeholder="" size="30" type="text" value=<%=user.zipcode %> required>

<label for="state" >City</label>

<span class="help-block">This field is required.Please use abbreviated state name.</span>
<input id="city" maxlength="36" name="city" placeholder="" size="30" type="text" value=<%=user.city %> required>

<label for="state" >State</label>

<span class="help-block">This field is required.Please use full state name.</span>
<input id="state" maxlength="2" name="state" placeholder="" size="30" type="text" value=<%=user.state %> required>

<label for="newpassword" >New Password</label>

<span class="help-block">Update your password.</span>
<input id="newpassword" maxlength="36" name="newpassword" placeholder="" size="30" type="password">

<label for="password" >Password</label>

<span class="help-block">Enter your current password and Submit to save changes.</span>
<input id="password" maxlength="36" name="password" placeholder="" size="30" type="password" required>
<button id="submit-button">Save Changes</button>

